{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
     "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "module": "ESNext"
  },
   "include": ["src/**/*", "vite.config.ts"]
}
